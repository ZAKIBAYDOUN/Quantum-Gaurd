{
  "name": "Quantum Guard Design System",
  "version": "1.0.0",
  "colors": {
    "background": "hsl(225, 9%, 8%)",
    "primary": "hsl(217, 91%, 60%)",
    "secondary": "hsl(185, 94%, 35%)",
    "success": "hsl(142, 71%, 45%)",
    "surface": "hsl(225, 14%, 12%)",
    "surfaceGlass": "hsla(225, 14%, 12%, 0.72)",
    "border": "hsl(223, 18%, 24%)",
    "text": "hsl(214, 32%, 92%)",
    "muted": "hsl(213, 20%, 72%)",
    "glow1": "hsla(217, 91%, 60%, 0.45)",
    "glow2": "hsla(185, 94%, 35%, 0.45)"
  },
  "typography": {
    "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, Liberation Sans, sans-serif",
    "weights": [300, 400, 500, 600, 700],
    "sizes": { "xs": 12, "sm": 14, "md": 16, "lg": 18, "xl": 22, "display": 34 }
  },
  "spacing": { "xs": 4, "sm": 8, "md": 12, "lg": 16, "xl": 24, "xxl": 32 },
  "radius": { "sm": 8, "md": 12, "lg": 14, "xl": 18 },
  "shadows": {
    "soft": "0 10px 30px rgba(0,0,0,.35)",
    "glowPrimary": "0 0 0 2px rgba(255,255,255,.08), 0 20px 60px hsla(217, 91%, 60%, .28)"
  },
  "transitions": { "fast": "150ms ease", "base": "220ms ease", "slow": "360ms ease" },
  "components": {
    "nav": { "height": 64, "glass": true },
    "card": { "glass": true, "bordered": true, "padding": 18 },
    "button": { "gradient": true, "scaleOnHover": true }
  },
  "layout": {
    "gradientBackground": [
      "radial-gradient(1200px 800px at 20% -10%, #173354 0%, transparent 60%)",
      "radial-gradient(900px 600px at 120% 10%, #0d3d39 0%, transparent 60%)"
    ],
    "sections": ["nav", "hero", "dashboard", "modules", "studio", "footer"]
  }
}
